<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>


<GridPane fx:controller="sample.MainScreenController"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <padding><Insets top="40" right="40" bottom="40" left="40"/></padding>
    <columnConstraints>
        <ColumnConstraints minWidth="100" prefWidth="100"
                           maxWidth="Infinity" halignment="RIGHT">
        </ColumnConstraints>
        <ColumnConstraints minWidth="200" prefWidth="200"
                           maxWidth="Infinity" hgrow="ALWAYS">
        </ColumnConstraints>
    </columnConstraints>

    <!-- Add Header Label -->
    <Label text="Inventory Management System" GridPane.columnIndex="0"
           GridPane.rowIndex="0" GridPane.columnSpan="2"
           GridPane.rowSpan="1" GridPane.halignment="LEFT" style="-fx-text-fill: blue; -fx-font-weight: bold;">
        <font>
            <Font name="Arial" size="24" />
        </font>
        <GridPane.margin>
            <Insets top="20" right="0" bottom="20" left="0"/>
        </GridPane.margin>
    </Label>

    <HBox GridPane.columnIndex="0"
          GridPane.rowIndex="1" GridPane.columnSpan="2"
          GridPane.rowSpan="1" style=" -fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;">

        <GridPane alignment="center" hgap="10" vgap="10" style=" -fx-border-color:black; -fx-border-width: 1; -fx-border-style: solid;" gridLinesVisible="true">

            <!-- Add Name Label -->
            <Label text="Parts" GridPane.columnIndex="0"
                   GridPane.rowIndex="0" GridPane.columnSpan="1"
                   GridPane.rowSpan="1" style="-fx-font-weight: bold;">
                <font>
                    <Font name="Arial" size="20" />
                </font>
            </Label>

            <Button fx:id="searchButton" text="Search"
                    prefWidth="100" prefHeight="20" defaultButton="true"
                    GridPane.columnIndex="2" GridPane.rowIndex="0"
                    GridPane.columnSpan="1" GridPane.rowSpan="1"
                    GridPane.halignment="RIGHT">
                //onAction="#handleSearchButtonAction"
                <GridPane.margin>
                    <!-- <Insets top="20" right="0" bottom="20" left="0"/>-->
                </GridPane.margin>
            </Button>

            <!-- Add Name Text Field -->
            <TextField fx:id="searchField" prefHeight="20" GridPane.columnIndex="3" GridPane.rowIndex="0" GridPane.columnSpan="1" GridPane.rowSpan="1"
                       GridPane.halignment="RIGHT"/>

            <TableView fx:id="tableView" prefHeight="200.0" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="4" GridPane.rowSpan="1"
                       GridPane.halignment="RIGHT">
                <columns>
                    <TableColumn prefWidth="150" text="Part ID" fx:id="PartId" />
                    <TableColumn prefWidth="150" text="Part Name" fx:id="PartName" />
                    <TableColumn prefWidth="150" text="Inventory Level" fx:id="InventoryLevel" />
                    <TableColumn prefWidth="150" text="Price/Cost per Unit" fx:id="PriceCPU" />
                </columns>
            </TableView>

        </GridPane>
    </HBox>

    <!-- Add Submit Button -->
    <Button fx:id="exitButton" text="Exit Program"
            prefWidth="100" prefHeight="40" defaultButton="true"
            GridPane.columnIndex="1" GridPane.rowIndex="3"
            GridPane.columnSpan="1" GridPane.rowSpan="1"
            GridPane.halignment="RIGHT">
            //onAction="#handleExitButtonAction"
        <GridPane.margin>
           <!-- <Insets top="20" right="0" bottom="20" left="0"/>-->
        </GridPane.margin>
    </Button>
</GridPane>